{
  "info": {
    "name": "Taxpal API",
    "_postman_id": "taxpal-collection",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Health",
      "request": {
        "method": "GET",
        "url": "{{baseUrl}}/api/health"
      }
    },
    {
      "name": "Signup",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": "{{baseUrl}}/api/auth/signup",
        "body": {
          "mode": "raw",
          "raw": "{\"username\": \"demo\", \"email\": \"demo@example.com\", \"password\": \"password123\"}"
        }
      }
    },
    {
      "name": "Verify Email",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": "{{baseUrl}}/api/auth/verify-email",
        "body": {
          "mode": "raw",
          "raw": "{\"email\": \"demo@example.com\", \"code\": \"123456\"}"
        }
      }
    },
    {
      "name": "Login",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": "{{baseUrl}}/api/auth/login",
        "body": {
          "mode": "raw",
          "raw": "{\"emailOrUsername\": \"demo@example.com\", \"password\": \"password123\"}"
        }
      }
    },
    {
      "name": "Forgot Password",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": "{{baseUrl}}/api/auth/forgot-password",
        "body": {
          "mode": "raw",
          "raw": "{\"email\": \"demo@example.com\"}"
        }
      }
    },
    {
      "name": "Verify Reset OTP",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": "{{baseUrl}}/api/auth/verify-reset-otp",
        "body": {
          "mode": "raw",
          "raw": "{\"email\": \"demo@example.com\", \"code\": \"123456\"}"
        }
      }
    },
    {
      "name": "Reset Password",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": "{{baseUrl}}/api/auth/reset-password",
        "body": {
          "mode": "raw",
          "raw": "{\"email\": \"demo@example.com\", \"code\": \"123456\", \"newPassword\": \"newpass123\"}"
        }
      }
    },
    {
      "name": "List Records",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": "{{baseUrl}}/api/records?kind=income"
      }
    },
    {
      "name": "Create Record",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": "{{baseUrl}}/api/records",
        "body": {
          "mode": "raw",
          "raw": "{\"kind\": \"income\", \"description\": \"Salary\", \"amount\": 5000, \"category\": \"Job\", \"date\": \"2025-01-01\"}"
        }
      }
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:4000"
    }
  ]
}
